<Window x:Class="ChatGPTExtension.ButtonNamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Button Names" Height="450" Width="400" WindowStartupLocation="CenterScreen" Background="#343541" Foreground="White">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#343541"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#343541"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="10">
        <Label Content="VS.NET to GPT"/>
        <TextBox Text="{Binding VSNETToGPT}"/>
        <Label Content="Fix Code in GPT"/>
        <TextBox Text="{Binding FixCodeInGPT}"/>
        <Label Content="Improve Code in GPT"/>
        <TextBox Text="{Binding ImproveCodeInGPT}"/>
        <Label Content="GPT to VS.NET"/>
        <TextBox Text="{Binding GPTToVSNET}"/>
        <Label Content="Continue Code"/>
        <TextBox Text="{Binding ContinueCode}"/>
        <Label Content="Complete Code"/>
        <TextBox Text="{Binding CompleteCode}"/>
        <Label Content="New File"/>
        <TextBox Text="{Binding NewFile}"/>
        <Label Content="Attach File"/>
        <TextBox Text="{Binding AttachFile}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Save" Width="100" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
    </ScrollViewer>
</Window>
